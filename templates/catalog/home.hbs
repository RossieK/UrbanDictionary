{{>header}}
<div class="content">
    {{#if user}}
    <section class="js">
        <h2>JavaScript</h2>
        <div class="articles">
            {{#each articles}}
            <article>
                <h3>{{this.title}}</h3>
                <p>{{this.content}}</p>
                <a href="/details/{{this._id}}" class="btn details-btn">Details</a>
            </article>
            {{else}}
            <h3 class="no-articles">No articles yet</h3>
            {{/each}}
        </div>
    </section>
    {{else}}
    <h1 class="not-logged-in">Please <a href="/login" class="login-link">login</a> in order to see the articles added.</h1>
    {{/if}}
</div>
{{>footer}}